<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500">

    <rotate
        android:fromDegrees="180"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        />

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"/>

    <translate
        android:fromXDelta="-90%p"
        android:toXDelta="0%p"/>

</set>